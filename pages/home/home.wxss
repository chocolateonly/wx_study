image{
  width: 100%;
  height: 400rpx;
}
.list{
  margin: 10rpx 10rpx 0 10rpx;
}
.item{
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 10rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}
.item-left{
  margin-right: 10rpx;
}
.item-left text{
  width: 100rpx;
  height: 100rpx;
  display: block;
  border-radius: 50%;
  background: #ffcccc;
  text-align: center;
  line-height: 100rpx;
}
.item-right{
  flex-grow: 1;
  min-width:0;/*for white-space*/
}
.right-title{
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}